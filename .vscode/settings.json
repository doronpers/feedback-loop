{
    "git.ignoreLimitWarning": true,
    
    // Feedback Loop Language Server Integration (works in VS Code and Cursor)
    "feedback-loop.enable": true,
    "feedback-loop.serverPath": "${workspaceFolder}/bin/feedback_loop_lsp.py",
    "feedback-loop.llmProvider": "claude",
    "feedback-loop.enableLLM": true,
    "feedback-loop.analysisDelay": 500,
    
    // Python Configuration
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--max-line-length=88", "--config=.flake8"],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length", "88"],
    "python.analysis.typeCheckingMode": "basic",
    
    // Python Testing
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "tests/",
        "-v"
    ],
    
    // Editor Settings
    "editor.formatOnSave": true,
    "editor.rulers": [88],
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    
    // File Associations
    "files.associations": {
        ".cursorrules": "markdown",
        ".flake8": "ini"
    }
}